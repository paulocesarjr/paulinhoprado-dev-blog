---
import katex from 'katex'
import 'katex/dist/katex.min.css'

interface Props {
	formula: string
	display?: boolean
}

const { formula, display = false } = Astro.props

const html = katex.renderToString(formula, {
	throwOnError: false,
	displayMode: display,
})
---

<span class={display ? 'block my-4' : ''} set:html={html} />
